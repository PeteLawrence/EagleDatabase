{% extends 'adminbase.html.twig' %}

{% block title %}Activity History{% endblock %}

{% block body %}
    <nav class="breadcrumb">
        <a class="breadcrumb-item" href="/">Home</a>
        <a class="breadcrumb-item" href="{{ path('account_overview') }}">Account</a>
        <span class="breadcrumb-item active">Activities</span>
    </nav>

    <h2>Activities</h2>


    {% if activitiesOrganising|length > 0 %}
        <div class="mb-3">
            <h3>Organising</h3>
            <p>Click the below button to see details of activities you are organising.</p>
            <a href="{{ path('account_activities_organising') }}" class="btn btn-primary">Organising</a>
        </div>
    {% endif %}

    <h3>Participating</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Activity</th>
                <th>Date</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for activity in participations %}
                <tr>
                    <td>{{ activity.managedActivity.name}}</td>
                    <td>{{ activity.managedActivity.activityStart|date('d M Y') }}</td>
                    <td>{% if activity.participantStatus %} {{activity.participantStatus.status }} {% endif %}</td>
                    <td>
                        <a href="{{ path('activity_view', { id: activity.managedActivity.id })}}"><i class="fa fa-eye"></i></a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}
