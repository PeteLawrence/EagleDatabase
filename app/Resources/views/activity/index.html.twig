{% extends 'base.html.twig' %}

{% block body %}
    <h1>Activity list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Start</th>
                <th>End</th>
                <th>Spaces</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for activity in activities %}
            <tr>
                <td>{% if activity.activityStart %}{{ activity.activityStart|date('Y-m-d H:i') }}{% endif %}</td>
                <td>{% if activity.activityEnd %}{{ activity.activityEnd|date('Y-m-d H:i') }}{% endif %}</td>
                <td>{{ activity.spaces }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('activity_show', { 'id': activity.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('activity_edit', { 'id': activity.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('activity_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
