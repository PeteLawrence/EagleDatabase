{% extends 'base.html.twig' %}

{% block title %}{{ activity.name }}{% endblock %}

{% block body %}
    <nav class="breadcrumb">
        <a class="breadcrumb-item" href="/">Home</a>
        <a class="breadcrumb-item" href="{{ path('activity_index') }}">Activities</a>
        <span class="breadcrumb-item active">{{ activity.name }}</span>
    </nav>

    <h2>{{ activity.name }}</h2>

    <div class="row">

    <div class="col-sm-8">
        <div class="card mb-2">
            <h4 class="card-header">Summary</h4>
            <div class="card-block">
                <ul>
                    <li><strong>Start</strong> {{ activity.activityStart|date('d M Y H:i')}}</li>
                    <li><strong>End</strong> {{ activity.activityEnd|date('d M Y H:i')}}</li>
                    <li><strong>Type</strong> {{ activity.activityType.type }}</li>
                    {% if activity.organiser %}
                        <li><strong>Organiser</strong> {{ activity.organiser.getName }}</li>
                    {% endif %}
                </ul>
                <em>Please note that times and locations may be subject to change.</em>
            </div>
        </div>

        <div class="card mb-2">
            <h4 class="card-header">Description</h4>
            <div class="card-block">
                {{ activity.description|markdown }}
            </div>
        </div>

        {% if app.user == activity.organiser or is_granted('ROLE_ADMIN') %}
            <a href="{{ path('activity_participants', { 'id': activity.id }) }}" class="btn btn-sm btn-info">View Participants</a>
            <a href="{{ path('activity_edit', { 'id': activity.id }) }}" class="btn btn-sm btn-warning">Edit Activity</a>
        {% endif %}

        {#<div class="card">
            <h4 class="card-header">Weather</h4>
            <div class="card-block" style="height: 170px; overflow-y: scroll;">
                <table class="table">
                    {% for dataPoint in activity.weatherDataPoints %}
                        <tr>
                            <td class="h2">{{ dataPoint.time|date('H:i', dataPoint.timeZone) }}</td>
                            <td>
