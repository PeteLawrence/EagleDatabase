{% extends 'base.html.twig' %}

{% block title %}Programme{% endblock %}

{% block body %}

<div class="banner-image" style="position:relative; height: 18rem; margin-bottom: 10px;">
    <div class="banner-image-fill" style="background-size: cover; background-image: url('/images/banner.jpg'); background-position: 0 -40px; height: 100%; width: 100%;">
    </div>
</div>

<h1 class="display-5">Programme</h1>

<div class="row">
    <div class="col-md-12">
        <table class="table">
            <thead class="thead-default">
                <tr>
                    <th colspan="2">Date</th>
                    <th>Time</th>
                    <th>Activity</th>
                    <th>Organiser</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                {% for day in days %}
                    {% for activity in day.activities %}
                        <tr {% if activity.activityType.color %} style="background-color: {{activity.activityType.color}};"{% endif %}>
                            <td>{{ day.start|date('l') }}</td>
                            <td>{{ day.start|date('d M Y') }}</td>
                            <td>{{ activity.activityStart|date('H:i') }}</td>
                            <td>{{ activity.name }}</td>
                            <td>{% if activity.organiser %}<abbr title="{{ activity.organiser.name }}">{{ activity.organiser.shortName }}</abbr>{% endif %}</td>
                            <td><a href="{{ path('activity_view', { 'id': activity.id }) }}" class="btn btn-sm"><i class="fa fa-search"></i></a></td>
                        </tr>
                    {% else %}
                        <tr>
                            <td>{{ day.start|date('l') }}</td>
                            <td>{{ day.start|date('d M Y') }}</td>
                            <td colspan="5"></td>
                        </tr>
                    {% endfor %}
                {% endfor %}
            </tbody>
        </table>

    </div>
</div>


{% endblock %}
