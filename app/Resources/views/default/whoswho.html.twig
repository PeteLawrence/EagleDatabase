{% extends 'base.html.twig' %}

{% block title %}Eagle Canoe Centre{% endblock %}

{% block body %}

<div class="banner-image" style="position:relative; height: 18rem; margin-bottom: 10px;">
    <div class="banner-image-fill" style="background-size: cover; background-image: url('/images/banner.jpg'); background-position: 0 -40px; height: 100%; width: 100%;">
    </div>
</div>

<h1 class="display-5">Who's Who?</h1>

<h2 class="display-6">Committee</h2>

<div class="card-deck">

    <div class="card">
        <img class="card-img-top fluid" src="http://www.eaglecanoeclub.org.uk/images/Stuart-Pontin.jpg" alt="Card image cap">
        <div class="card-block">
            <h4 class="card-title">Stuart Pontin</h4>
            <h5>Chairman</h5>
        </div>
    </div>

    <div class="card">
        <img class="card-img-top fluid" src="http://www.eaglecanoeclub.org.uk/images/team13.jpg" alt="Card image cap">
        <div class="card-block">
            <h4 class="card-title">Si Allen</h4>
            <h5>Vice-Chairman</h5>
        </div>
    </div>

    <div class="card">
        <img class="card-img-top fluid" src="http://www.eaglecanoeclub.org.uk/images/Martin-Lacey.jpg" alt="Card image cap">
        <div class="card-block">
            <h4 class="card-title">Martin Lacey</h4>
            <h5>Secretary</h5>
        </div>
    </div>

    <div class="card">
        <img class="card-img-top fluid" src="http://www.eaglecanoeclub.org.uk/images/Hazel-Roe.jpg" alt="Card image cap">
        <div class="card-block">
            <h4 class="card-title">Hazel Roe</h4>
            <h5>Treasurer</h5>
        </div>
    </div>

</div>



<h2 class="display-6">Coaches</h2>

<div class="card" style="width: 15rem">
    <img class="card-img-top fluid" src="http://www.eaglecanoeclub.org.uk/images/Pete-Lawrence.jpg" alt="Card image cap">
    <div class="card-block">
        <h4 class="card-title">Pete Lawrence</h4>
    </div>
</div>

{% endblock %}
