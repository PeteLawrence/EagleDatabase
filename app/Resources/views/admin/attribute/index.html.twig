{% extends 'adminbase.html.twig' %}

{% block body %}
    <h1>Attribute list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Code</th>
                <th>Name</th>
                <th>Type</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for attribute in attributes %}
            <tr>
                <td>{{ attribute.code }}</td>
                <td>{{ attribute.name }}</td>
                <td>{{ attribute.type }}</td>
                <td>
                    <a href="{{ path('admin_activitytype_show', { 'id': attribute.id }) }}" class="btn btn-sm"><i class="fa fa-search"></i></a>
                    <a href="{{ path('admin_attribute_edit', { 'id': attribute.id }) }}" class="btn btn-sm"><i class="fa fa-pencil"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="btn-group">
        <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Create</button>
        <div class="dropdown-menu">
            <a href="{{ path('admin_attribute_new') }}" class="dropdown-item">Boolean Attribute</a>
            <a href="{{ path('admin_attribute_new', { 'type': 'number' }) }}" class="dropdown-item">Number Attribute</a>
            <a href="{{ path('admin_attribute_new', { 'type': 'text' }) }}" class="dropdown-item">Text Attribute</a>
        </div>
    </div>
{% endblock %}
