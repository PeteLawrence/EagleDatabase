{% extends 'adminbase.html.twig' %}

{% block body %}
    <h1>Participant list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Signupdatetime</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for participant in participants %}
            <tr>
                <td><a href="{{ path('admin_participant_show', { 'id': participant.id }) }}">{{ participant.id }}</a></td>
                <td>{% if participant.signupDatetime %}{{ participant.signupDatetime|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_participant_show', { 'id': participant.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_participant_edit', { 'id': participant.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_participant_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
