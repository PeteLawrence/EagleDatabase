{% extends 'adminbase.html.twig' %}

{% block breadcrumbs %}
    <nav class="breadcrumb">
        <a class="breadcrumb-item" href="/">Home</a>
        <a class="breadcrumb-item" href="{{ path('admin_index')}}">Admin</a>
        <span class="breadcrumb-item active">Activity Types</span>
    </nav>
{% endblock %}

{% block body %}
    <h1>ActivityType list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Type</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for activityType in activityTypes %}
            <tr>
                <td>{{ activityType.type }}</td>
                <td>
                    <a href="{{ path('admin_activitytype_show', { 'id': activityType.id }) }}" class="btn btn-sm"><i class="fa fa-search"></i></a>
                    <a href="{{ path('admin_activitytype_edit', { 'id': activityType.id }) }}" class="btn btn-sm"><i class="fa fa-pencil"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_activitytype_new') }}" class="btn btn-primary">Create</a>
{% endblock %}
