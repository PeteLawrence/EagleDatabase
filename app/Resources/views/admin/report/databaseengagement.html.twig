{% extends 'adminbase.html.twig' %}

{% block title %}Reports: Database Engagement{% endblock %}

{% block breadcrumbs %}
    <nav class="breadcrumb">
        <a class="breadcrumb-item" href="/">Home</a>
        <a class="breadcrumb-item" href="{{ path('admin_index')}}">Admin</a>
        <a class="breadcrumb-item" href="{{ path('admin_report_index')}}">Reports</a>
        <span class="breadcrumb-item active">Database Engagement</span>
    </nav>
{% endblock %}

{% block body %}
    <h1>Database Engagement</h1>

    <div class="row">
        <div class="col-4">
            <div id="accountStatusPieChart"></div>
        </div>
        <div class="col-4">
            <div id="usedOnlineSignupPieChart"></div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div id="onlineSignupCountChart"></div>
        </div>
    </div>


    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">
        {% if accountStatusPieChart is defined %}{{ gc_draw(accountStatusPieChart, 'accountStatusPieChart') }}{% endif %}
        {% if usedOnlineSignupPieChart is defined %}{{ gc_draw(usedOnlineSignupPieChart, 'usedOnlineSignupPieChart') }}{% endif %}
        {% if onlineSignupCountChart is defined %}{{ gc_draw(onlineSignupCountChart, 'onlineSignupCountChart') }}{% endif %}

    </script>
{% endblock %}
