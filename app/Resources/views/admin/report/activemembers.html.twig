{% extends 'adminbase.html.twig' %}

{% block title %}Reports: Active Members{% endblock %}

{% block breadcrumbs %}
    <nav class="breadcrumb">
        <a class="breadcrumb-item" href="/">Home</a>
        <a class="breadcrumb-item" href="{{ path('admin_index')}}">Admin</a>
        <a class="breadcrumb-item" href="{{ path('admin_report_index')}}">Reports</a>
        <span class="breadcrumb-item active">Active Members</span>
    </nav>
{% endblock %}

{% block body %}
    <h1>Active Members</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            {% for member in activeMembers %}
                <tr>
                    <td>{{ member.forename }} {{ member.surname }}</td>
                    <td>{{ member.email }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
