{% extends 'adminbase.html.twig' %}

{% block title %}Reports: Emails List{% endblock %}

{% block breadcrumbs %}
    <nav class="breadcrumb">
        <a class="breadcrumb-item" href="/">Home</a>
        <a class="breadcrumb-item" href="{{ path('admin_index')}}">Admin</a>
        <a class="breadcrumb-item" href="{{ path('admin_report_index')}}">Reports</a>
        <span class="breadcrumb-item active">Email List</span>
    </nav>
{% endblock %}

{% block body %}
    <h1>Email List</h1>

    {{ form_start(form) }}
    <div class="row mb-3">
        <div class="col-lg-2">
            {{ form_widget(form.membershipType) }}
        </div>

        <div class="col-lg-10">
            <input type="submit" class="btn btn-primary" value="Go" />
        </div>
    </div>
    {{ form_end(form) }}

    <h2>Regular Emails</h2>
    <div>
        {{ regularEmailsString }}
    </div>

    <h2>Crappy BT Emails</h2>
    <div>
        {{ btEmailsString }}
    </div>
{% endblock %}
