{% extends 'adminbase.html.twig' %}

{% block title %}Reports: Attendance League{% endblock %}

{% block breadcrumbs %}
    <nav class="breadcrumb">
        <a class="breadcrumb-item" href="/">Home</a>
        <a class="breadcrumb-item" href="{{ path('admin_index')}}">Admin</a>
        <a class="breadcrumb-item" href="{{ path('admin_report_index')}}">Reports</a>
        <span class="breadcrumb-item active">Attendance League</span>
    </nav>
{% endblock %}

{% block body %}
    <h1>Attendance League</h1>

    <div class="col-12">
        {{ form_start(form, { attr: { class: 'form-inline'}}) }}
        <div class="form-group">
            {{ form_label(form.fromDate) }}
            {{ form_widget(form.fromDate) }}
        </div>
        <div class="form-group">
            {{ form_label(form.toDate) }}
            {{ form_widget(form.toDate) }}
        </div>
        <button type="submit" class="btn btn-primary">Run</button>
        {{ form_end(form) }}
    </form>
    </div>

    {% if attendance is defined %}
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Visits</th>
                </tr>
            </thead>
            <tbody>
                {% for attendee,visits in attendance %}
                    <tr>
                        <td>{{ attendee }}</td>
                        <td>{{visits}}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}

{% endblock %}
