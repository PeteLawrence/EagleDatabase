{% extends 'base.html.twig' %}

{% block body %}
    <h1>Overview</h1>

    <h2>Membership</h2>
    <div class="row">
        <div class="col-lg-4">
            <div id="genderChart"></div>
        </div>
        <div class="col-lg-8">
            <div id="ageChart"></div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div id="lengthChart"></div>
        </div>
        <div class="col-lg-4">
            <div id="returningChart"></div>
        </div>
    </div>

    <h2>Visits</h2>
    <div class="row">
        <div class="col-xs-4">
            <div id="visitsChart"></div>
        </div>
        <div class="col-xs-8">
            <div id="visitsByGenderChart"></div>
        </div>
    </div>

    <h2>Qualifications</h2>
    <div id="qualificationChart"></div>

    <h2>White Water Weekends</h2>
    <div class="row">
        <div class="col-xs-6">
            <div id="whiteWaterGender"></div>
        </div>
        <div class="col-xs-6">
            <div id="whiteWaterAge"></div>
        </div>
    </div>

    <script type="text/javascript" src="https://www.google.com/jsapi"></script>
    <script type="text/javascript">
        {{ gc_draw(genderChart, 'genderChart') }}
        {{ gc_draw(ageChart, 'ageChart') }}
        {{ gc_draw(lengthChart, 'lengthChart') }}
        {{ gc_draw(returningChart, 'returningChart') }}
        {{ gc_draw(visitsChart, 'visitsChart') }}
        {{ gc_draw(visitsByGenderChart, 'visitsByGenderChart') }}
        {{ gc_draw(qualificationChart, 'qualificationChart') }}
        {{ gc_draw(whiteWaterGenderChart, 'whiteWaterGender') }}
        {{ gc_draw(whiteWaterAgeChart, 'whiteWaterAge') }}
    </script>
{% endblock %}
