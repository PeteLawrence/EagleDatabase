{% extends 'adminbase.html.twig' %}

{% block title %}Reports: Expired Qualifications{% endblock %}

{% block breadcrumbs %}
    <nav class="breadcrumb">
        <a class="breadcrumb-item" href="/">Home</a>
        <a class="breadcrumb-item" href="{{ path('admin_index')}}">Admin</a>
        <a class="breadcrumb-item" href="{{ path('admin_report_index')}}">Reports</a>
        <span class="breadcrumb-item active">Expired Qualifications</span>
    </nav>
{% endblock %}

{% block body %}
    <h1>Expired Qualifications</h1>


    <table class="table table-sm table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Qualification</th>
                <th>Expired</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for qualification in expiredQualifications %}
                <tr>
                    <td>{{ qualification.person.name }}</td>
                    <td>
                        {{ qualification.qualification.name }}
                    </td>
                    <td>{{ qualification.validTo|date('jS F Y') }}</td>
                    <td>
                        <a href="{{ path('admin_person_edit', { id: qualification.person.id} ) }}">
                            <i class="fa fa-user"></i>
                        </a>
                        <a href="{{ path('admin_memberqualification_edit', { personId: qualification.person.id, id: qualification.id } ) }}">
                            <i class="fa fa-trophy"></i>
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">
                        No qualifications have expired
                    </td>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
