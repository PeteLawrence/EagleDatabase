{% extends 'adminbase.html.twig' %}

{% block title %}Reports: Attendance Detail{% endblock %}

{% block breadcrumbs %}
    <nav class="breadcrumb">
        <a class="breadcrumb-item" href="/">Home</a>
        <a class="breadcrumb-item" href="{{ path('admin_index')}}">Admin</a>
        <a class="breadcrumb-item" href="{{ path('admin_report_index')}}">Reports</a>
        <span class="breadcrumb-item active">Attendance Detail</span>
    </nav>
{% endblock %}

{% block body %}
    <h1>Attendance Detail</h1>

    <div class="col-12">
        {{ form_start(form, { attr: { class: 'form-inline'}}) }}
        <div class="form-group">
            {{ form_label(form.fromDate) }}
            {{ form_widget(form.fromDate) }}
        </div>
        <div class="form-group">
            {{ form_label(form.toDate) }}
            {{ form_widget(form.toDate) }}
        </div>
        <div class="form-group">
            {{ form_label(form.activityType) }}
            {{ form_widget(form.activityType) }}
        </div>
        <button type="submit" class="btn btn-primary">Run</button>
        {{ form_end(form) }}
    </div>

    <div id="attendanceByGenderChart"></div>
    <div id="attendanceByTypeChart"></div>

    <div class="row">
        <div class="col-4">
            <div id="attendanceByGenderPieChart"></div>
        </div>
        <div class="col-4">
            <div id="attendanceByTypePieChart"></div>
        </div>
        <div class="col-4">
            <div id="attendanceBySignupMethodPieChart"></div>
        </div>
    </div>


    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">
        {% if attendanceByGenderChart is defined %}{{ gc_draw(attendanceByGenderChart, 'attendanceByGenderChart') }}{% endif %}
        {% if attendanceByTypeChart is defined %}{{ gc_draw(attendanceByTypeChart, 'attendanceByTypeChart') }}{% endif %}
        {% if attendanceByGenderPieChart is defined %}{{ gc_draw(attendanceByGenderPieChart, 'attendanceByGenderPieChart') }}{% endif %}
        {% if attendanceByTypePieChart is defined %}{{ gc_draw(attendanceByTypePieChart, 'attendanceByTypePieChart') }}{% endif %}
        {% if attendanceBySignupMethodPieChart is defined %}{{ gc_draw(attendanceBySignupMethodPieChart, 'attendanceBySignupMethodPieChart') }}{% endif %}
    </script>
{% endblock %}
