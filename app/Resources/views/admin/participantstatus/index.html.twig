{% extends 'adminbase.html.twig' %}

{% block body %}
    <h1>ParticipantStatus list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for participantStatus in participantStatuses %}
            <tr>
                <td>{{ participantStatus.status }}</td>
                <td>
                    <a href="{{ path('admin_participantstatus_show', { 'id': participantStatus.id }) }}" class="btn btn-sm"><i class="fa fa-search"></i></a>
                    <a href="{{ path('admin_participantstatus_edit', { 'id': participantStatus.id }) }}" class="btn btn-sm"><i class="fa fa-pencil"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_participantstatus_new') }}" class="btn btn-primary">Create</a>
{% endblock %}
